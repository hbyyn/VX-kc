.header{
  width: 100%;
  height: 200px;
  background: #efefef;
  display: flex;
}
.header-img{
  width: 150px;
}
.header-img image{
  width: 100px;
  height: 100px;
  border-radius: 50%;
  overflow: hidden;
  border: #999 2px solid;
  display: block;
  margin: 50px auto;
}
.header-info{
  flex: 1;
  position: relative;
}
.login{
  width: 100px;
  font-size: 14px;
  color: #666;
  transform: translateY(-50%);
  position: absolute;
  left: 20px;
  top: 50%;
}
.name{
  font-size: 14px;
  color: #666;
  transform: translateY(-50%);
  position: absolute;
  left: 20px;
  top: 50%;
}
