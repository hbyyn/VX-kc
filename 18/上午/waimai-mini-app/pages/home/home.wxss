.address{
  padding: 0 10px;
  display: flex;
  align-items: center;
}
.address-icon{
  width: 15px;
}
.address-text{
  font-size: 15px;
  color: #222;
  margin: 0 2px;
}
.address-arrow{
  width: 12px;
}

.category{
  height: 260rpx;
  padding: 20rpx 0;
}
.category-item{
  width: 20%;
  float: left;
}
.category-item image{
  display: block;
  width: 70rpx;
  margin: 0 auto;
}
.category-item text{
  display: block;
  text-align: center;
  font-size: 12px;
  color: #999;
  height: 40rpx;
  line-height: 40rpx;
  padding: 5px 0;
}
.category-wrap{
  position: relative;
}
.dots{
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
}
.dot{
  width: 6px;
  height: 6px;
  border-radius: 3px;
  background: #ddd;
  margin: 0 2px;
}
.dot.active{
  width: 10px;
  background: rgb(253,156,57);
}